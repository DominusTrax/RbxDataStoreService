{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"jsx": "react",
		"outDir": "Bin",
		"rootDir": "Source",
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"preserveSymlinks": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"stripInternal": true,
		"declaration": true,
		"removeComments": false,
		"declarationDir": "Bin/Types"
	},
	"include": ["Source/"],
	"exclude": ["Source/first-install.ts", "Source/Tests"]
}
